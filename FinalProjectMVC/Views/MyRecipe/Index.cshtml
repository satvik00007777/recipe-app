@model List<FinalProjectMVC.DTOs.CustomRecipeDto>

@{
    ViewData["Title"] = "My Recipes";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/MyRecipes.css">
</head>
<body>

    <h2>My Recipes</h2>

    @if (Model != null && Model.Any())
    {
        <div class="recipe-list">
            @foreach (var recipe in Model)
            {
                <div class="recipe-card">
                    <h4>@recipe.Title</h4>
                    <button class="details-btn" onclick="showDetails(@recipe.RecipeId)">Details</button>
                    <div id="details-@recipe.RecipeId" class="recipe-details" style="display: none;">
                        <p><strong>Ingredients:</strong> @recipe.Ingredients</p>
                        <p><strong>Instructions:</strong> @recipe.Instructions</p>
                        <img src="@recipe.ImageUrl" alt="Recipe Image" class="recipe-image" />
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No recipes found.</p>
    }

    <script src="~/js/Myrecipes.js"></script>

</body>
</html>
