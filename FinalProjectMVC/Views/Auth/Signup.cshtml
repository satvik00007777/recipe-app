@model FinalProjectMVC.DTOs.SignupDto;

<h2 style="color: #4a4a4a; text-align: center;">Signup</h2>

<form asp-action="Signup" method="post" style="max-width: 400px; margin: 0 auto; background-color: #f0f8ff; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);">

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="name" style="color: #4a4a4a;">Name</label>
        <input type="text" class="form-control" id="name" name="Name" asp-for="Name" required style="background-color: #d3d3d3; border: 1px solid #ccc; padding: 10px; border-radius: 5px;" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="username" style="color: #4a4a4a;">Username</label>
        <input type="text" class="form-control" id="username" name="Username" asp-for="Username" required style="background-color: #d3d3d3; border: 1px solid #ccc; padding: 10px; border-radius: 5px;" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="email" style="color: #4a4a4a;">Email</label>
        <input type="email" class="form-control" id="email" name="Email" asp-for="Email" required style="background-color: #d3d3d3; border: 1px solid #ccc; padding: 10px; border-radius: 5px;" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="password" style="color: #4a4a4a;">Password</label>
        <input type="password" class="form-control" id="password" name="Password" asp-for="Password" required style="background-color: #d3d3d3; border: 1px solid #ccc; padding: 10px; border-radius: 5px;" />
    </div>

    <button type="submit" class="btn btn-primary" style="width: 100%; background-color: #87CEEB; border: none; color: white; padding: 10px; font-size: 16px; border-radius: 5px;">Signup</button>
</form>