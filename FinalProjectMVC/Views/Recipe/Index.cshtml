@using FinalProjectMVC.DTOs
@model List<RecipeDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #2a6592;
        }

        .profile {
            text-align: right;
            margin: 20px 50px 0 0;
        }

        .profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .profile img:hover {
            transform: scale(1.1);
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e0e7ff;
        }

        img {
            border-radius: 8px;
        }

        button {
            background-color: #2a6592;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #1f4f7d;
        }

        .custom-recipe-btn {
            display: block;
            width: 200px;
            margin: 30px auto;
            text-align: center;
            background-color: #2a6592;
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .custom-recipe-btn:hover {
            background-color: #1f4f7d;
        }
    </style>
</head>
<body>

    <div class="profile">
        <a href="/User/EditProfile">
            <img src="/images/profile-icon.png" alt="Profile Icon">
        </a>
    </div>

    <h2>Recipes</h2>
    <table>
        @foreach (var recipe in Model)
        {
            <tr>
                <td><img src="@recipe.ImageUrl" alt="Recipe image" width="100" /></td>
                <td>@recipe.Title</td>
                <td>
                    <form action="/Recipe/Details/@recipe.Title" method="get">
                        <button type="submit">Details</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <a class="custom-recipe-btn" href="/Recipe/CustomRecipe">Create Custom Recipe</a>

</body>
</html>
